    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Share"
        app:layout_constraintBottom_toTopOf="@+id/settingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statsButton"
        app:layout_constraintVertical_bias="0.464" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Settings"
        app:layout_constraintBottom_toTopOf="@+id/fbButton"
        app:layout_constraintEnd_toEndOf="@+id/text_profile"
        app:layout_constraintStart_toStartOf="@+id/text_profile"
        app:layout_constraintTop_toBottomOf="@+id/shareButton" />

    <ImageButton
        android:id="@+id/fbButton"
        android:layout_width="63dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_facebook_logo_blue_circle_large_transparent_png"
        app:layout_constraintBottom_toTopOf="@+id/text_profile"
        app:layout_constraintEnd_toEndOf="@+id/text_profile"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="@+id/text_profile"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton" />

    <ImageButton
        android:id="@+id/twitterButton"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_twitter_icon"
        app:layout_constraintBottom_toTopOf="@+id/text_profile"
        app:layout_constraintEnd_toEndOf="@+id/text_profile"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/text_profile"
        app:layout_constraintTop_toBottomOf="@+id/fbButton"
        app:layout_constraintVertical_bias="0.984" />

    <ImageButton
        android:id="@+id/instaButton"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_instagram_icon"
        app:layout_constraintBottom_toTopOf="@+id/text_profile"
        app:layout_constraintEnd_toEndOf="@+id/text_profile"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="@+id/text_profile"
        app:layout_constraintTop_toBottomOf="@+id/fbButton"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>